class Solution {
    final int LAMB_SKEWER_FEE = 12000;
    final int DRINK_FEE = 2000;

    public int solution(int n, int k) {
        int serviceDrinkCount = n / 10;
        int drinkCount = (k > serviceDrinkCount) ? (k - serviceDrinkCount) : 0;
        int totalDrinkFee = drinkCount * DRINK_FEE;
        int totalLambSkewerFee = n * LAMB_SKEWER_FEE;

        return totalLambSkewerFee + totalDrinkFee;
    }
}